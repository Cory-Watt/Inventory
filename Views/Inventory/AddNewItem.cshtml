@model Inventory.Models.ItemModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/add-edit-item.css">
    <title>Inventory Application - Add/Edit Item</title>
</head>
<body>

    <div class="container">
        <h2 class="form-title">Add New Item</h2>
        <form asp-action="AddNewItem" asp-controller="Inventory" method="post">
            <div class="form-row">
                <div class="form-column">
                    <div class="form-group">
                        <label for="ItemName">Item Name</label>
                        <input type="text" id="ItemName" name="ItemName">
                    </div>
                    <div class="form-group">
                        <label for="ItemDescription">Description</label>
                        <textarea id="ItemDescription" name="ItemDescription"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="ItemPrice">Price</label>
                        <input type="text" id="ItemPrice" name="ItemPrice">
                    </div>
                    <div class="form-group">
                        <label for="ItemQuantity">Quantity in Stock</label>
                        <input type="text" id="ItemQuantity" name="ItemQuantity">
                    </div>
                </div>
                <div class="form-column">
                    <div class="form-group">
                        <label for="ItemVendorId">Vendor ID</label>
                        <input type="text" id="ItemVendorId" name="ItemVendorId">
                    </div>
                    <div class="form-group">
                        <label for="ItemVendorName">Vendor Name</label>
                        <input type="text" id="ItemVendorName" name="ItemVendorName">
                    </div>
                    <div class="form-group">
                        <label for="ItemVendorContactDetails">Contact Details</label>
                        <input type="text" id="ItemVendorContactDetails" name="ItemVendorContactDetails">
                    </div>
                    <div class="form-group">
                        <label for="ItemVendorAssociatedProducts">Associated Products</label>
                        <input type="text" id="ItemVendorAssociatedProducts" name="ItemVendorAssociatedProducts">
                    </div>
                </div>
            </div>

            <div class="button-group">
                <button type="button" class="button delete-button">Delete</button>
                <button type="submit" class="button save-button">Save</button>
            </div>
        </form>
    </div>

</body>
</html>