@model Inventory.Models.ItemModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/add-edit-item.css">
    <title>Inventory Application - Edit Item</title>
</head>
<body>

    <div class="container">
        <h2 class="form-title">Edit Item</h2>
        <form asp-action="Edit" asp-controller="Inventory" method="post">
            <input type="hidden" asp-for="ItemId">
            <div class="form-row">
                <div class="form-column">
                    <div class="form-group">
                        <label asp-for="ItemName">Item Name</label>
                        <input asp-for="ItemName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="ItemDescription">Description</label>
                        <textarea asp-for="ItemDescription" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="ItemPrice">Price</label>
                        <input asp-for="ItemPrice" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="ItemQuantity">Quantity in Stock</label>
                        <input asp-for="ItemQuantity" class="form-control">
                    </div>
                </div>
                <div class="form-column">
                    <div class="form-group">
                        <label asp-for="ItemVendorId">Vendor ID</label>
                        <input asp-for="ItemVendorId" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="ItemVendorName">Vendor Name</label>
                        <input asp-for="ItemVendorName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="ItemVendorContactDetails">Contact Details</label>
                        <input asp-for="ItemVendorContactDetails" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="ItemVendorAssociatedProducts">Associated Products</label>
                        <input asp-for="ItemVendorAssociatedProducts" class="form-control">
                    </div>
                </div>
            </div>

            <!-- Save Button -->
            <div class="form-group">
                <button type="submit" class="button save-button">Save</button>
            </div>
        </form>

        <!-- Separate Delete Form -->
        <form asp-action="Delete" asp-controller="Inventory" method="post" class="delete-form">
            <input type="hidden" name="itemId" value="@Model.ItemId">
            <div class="form-group">
                <button type="submit" class="button delete-button">Delete</button>
            </div>
        </form>
    </div>

</body>
</html>